{
  "name": "eslint-config-nifty",
  "description": "NiftyCo's TypeScript ESLint shared config",
  "version": "3.1.2",
  "repository": "aniftyco/eslint-config-nifty",
  "main": "dist/base.js",
  "author": {
    "name": "Nifty Development, LLC",
    "email": "support@aniftyco.com",
    "url": "https://aniftyco.com"
  },
  "contributors": [
    {
      "name": "Josh Manders",
      "url": "https://twitter.com/joshmanders"
    }
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "lint": "eslint src/*",
    "prepublishOnly": "yarn build"
  },
  "engines": {
    "node": ">= 14"
  },
  "keywords": [
    "eslint",
    "tslint",
    "eslintconfig",
    "tslintconfig",
    "config",
    "niftyco",
    "javascript",
    "typescript"
  ],
  "files": [
    "dist/",
    "react.js"
  ],
  "eslintConfig": {
    "extends": "./dist/base.js",
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.2",
    "@types/node": "^14.6.3",
    "eslint": "^7.8.1",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "eslint": "^7.8.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "prettier": "^2.1.1"
  },
  "optionalDependencies": {
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0"
  }
}
